
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Admin BROLY69</title>
</head>
<body>
  <h1>Admin Panel</h1>
  <form action="/admin/add" method="POST" enctype="multipart/form-data">
    <input name="name" placeholder="Nom du produit" required><br>
    <textarea name="description" placeholder="Description" required></textarea><br>
    <textarea name="prices" placeholder="Ex: 5g:60\n10g:120" required></textarea><br>
    <input type="file" name="media" accept="image/*,video/*"><br>
    <button type="submit">Ajouter</button>
  </form>
  <hr>
  <h2>Produits existants</h2>
  <% produits.forEach(p => { %>
    <div>
      <strong><%= p.name %></strong>
      <form action="/admin/delete/<%= p._id %>" method="POST" style="display:inline;">
        <button>Supprimer</button>
      </form>
    </div>
  <% }) %>
</body>
</html>
